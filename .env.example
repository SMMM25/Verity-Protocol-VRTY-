# ============================================================
# Verity Protocol - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# ============================================================
# REQUIRED - Core Settings
# ============================================================

# PostgreSQL Database (Railway provides this automatically)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Node Environment
NODE_ENV="production"

# API Configuration
API_PORT="3000"
API_HOST="0.0.0.0"
API_VERSION="v1"

# JWT Secret (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"

# ============================================================
# REQUIRED - XRPL Configuration
# ============================================================

# XRPL Network (mainnet, testnet, devnet)
XRPL_NETWORK="mainnet"

# XRPL RPC URLs
XRPL_MAINNET_URL="wss://xrplcluster.com"
XRPL_TESTNET_URL="wss://s.altnet.rippletest.net:51233"
XRPL_DEVNET_URL="wss://s.devnet.rippletest.net:51233"

# Verity Issuer Address (VRTY token issuer)
VERITY_ISSUER_ADDRESS="rBeHfq9vRjZ8Cth1sMbp2nJvExmxSxAH8f"
VRTY_ISSUER_ADDRESS="rBeHfq9vRjZ8Cth1sMbp2nJvExmxSxAH8f"

# Founder Address
FOUNDER_ADDRESS="rLmLMErLKDzWXyYmcZGHqQ3SCgTVJCVjA3"

# ============================================================
# OPTIONAL - Relayer Configuration
# ============================================================

# Relayer Wallet (for gasless transactions)
# RELAYER_WALLET_SEED="sEdXXXXXXXXXXXXXXXXXXXX"
# RELAYER_TREASURY_SEED="sEdXXXXXXXXXXXXXXXXXXXX"

# Relayer Settings
RELAYER_MIN_STAKE="1000"
RELAYER_MIN_TREASURY_BALANCE="100"
RELAYER_MAX_FEE_PER_TX="1"
RELAYER_REQUIRE_STAKE="true"
RELAYER_GLOBAL_RATE_LIMIT="1000"
RELAYER_RATE_LIMIT_WINDOW="60000"
RELAYER_MAX_RETRIES="3"
RELAYER_RETRY_DELAY_MS="1000"
RELAYER_INTENT_EXPIRATION="300000"
RELAYER_ENABLE_CIRCUIT_BREAKER="true"
RELAYER_CIRCUIT_BREAKER_THRESHOLD="5"

# ============================================================
# OPTIONAL - Escrow & Vesting
# ============================================================

# Release Bot Wallet
# RELEASE_BOT_WALLET_SEED="sEdXXXXXXXXXXXXXXXXXXXX"

# Vesting Wallet
# VESTING_WALLET_SEED="sEdXXXXXXXXXXXXXXXXXXXX"

# ============================================================
# OPTIONAL - Governance
# ============================================================

# Multi-sig Address
# MULTI_SIG_ADDRESS="rXXXXXXXXXXXXXXXXXXXXXXXXX"

# Governance Signers (comma-separated wallet addresses)
# GOVERNANCE_SIGNERS="rWallet1,rWallet2,rWallet3"

# ============================================================
# OPTIONAL - Bridge Configuration
# ============================================================

# Bridge Network Mode
BRIDGE_NETWORK="testnet"

# XRPL Bridge Escrow
# XRPL_BRIDGE_ESCROW="rXXXXXXXXXXXXXXXXXXXXXXXXX"
# XRPL_BRIDGE_ESCROW_MAINNET="rXXXXXXXXXXXXXXXXXXXXXXXXX"

# Solana Configuration
SOLANA_NETWORK="devnet"
